{
    "extends": ["airbnb", "prettier", "prettier/react", "plugin:prettier/recommended", "eslint-config-prettier", "@react-native-community"],
    "parser": "babel-eslint",
    "rules": {
        "import/no-unresolved": "off",
        "import/prefer-default-export": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true
            }
        ]
    },
    "plugins": ["prettier"]
}
